<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_gray_100">




        <TextView
            android:id="@+id/choice_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:background="@drawable/choose_type_bg_unselected"
            android:fontFamily="@font/roboto_medium"
            android:paddingVertical="20dp"
            android:paddingStart="30dp"
            android:text="Nombres aléatoires"
            android:textColor="@color/blue_gray_100"
            android:textSize="16sp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.473"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline7" />

        <TextView
            android:id="@+id/description_numbers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/description_numbers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/choice_one" />

        <TextView
            android:id="@+id/choice_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/choose_type_bg_selected"
            android:fontFamily="@font/roboto_medium"
            android:paddingVertical="20dp"
            android:paddingStart="30dp"
            android:layout_marginTop="60dp"
            android:text="Mots/Noms aléatoires"
            android:textColor="@color/blue_gray_100"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.473"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/choice_one" />

        <TextView
            android:id="@+id/description_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="start"
            android:text="@string/description_names"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/choice_two" />


        <View
            android:id="@+id/viewOther"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/choose_type_bg_unselected"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/choice_two" />

        <TextView
            android:id="@+id/choice_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingVertical="20dp"
            android:paddingStart="30dp"
            android:text="Autres .."
            android:layout_marginTop="40dp"
            android:textColor="#FFC107"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.473"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/choice_two" />


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/viewOther"
            app:layout_constraintEnd_toEndOf="@+id/viewOther"
            app:layout_constraintTop_toTopOf="@+id/viewOther"
            android:layout_marginEnd="15dp"
            app:srcCompat="@drawable/premium" />

        <TextView
            android:id="@+id/description_autres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="start"
            android:text="@string/description_other"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/choice_three" />

        <TextView
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/confirm_button_off"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:paddingVertical="18dp"
            android:text="Confirmer"
            android:elevation="4dp"
            android:textColor="@color/blue_gray_100"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.157"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline9" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:text="Choisisez le type de vos élements"
            android:textColor="@color/blue_gray_600"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline7"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline8" />

        <View
            android:id="@+id/separator_top"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/blue_gray_600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline7" />


        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginStart="40dp"
            android:text="Veuillez choisir un type de vos elements.."
            android:textColor="#B10640"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/next_btn"
            app:layout_constraintStart_toStartOf="parent" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:src="@drawable/random_icon"
            app:layout_constraintBottom_toTopOf="@+id/guideline7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            app:layout_constraintTop_toTopOf="@+id/guideline8" />


        <View
            android:id="@+id/viewDemo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:background="#ED536E7C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separator_top" />

        <TextView
            android:id="@+id/textDemo1"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black_italic"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            android:text="Cette section pour choisir un intervalle des numéros ou bien des numéros spécifique"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/choice_one"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="@+id/choice_one" />

        <ImageView
            android:id="@+id/nextImage1"
            android:layout_width="43dp"
            android:layout_height="36dp"
            android:layout_marginEnd="24dp"
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/choice_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/next" />


        <TextView
            android:id="@+id/textDemo2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:fontFamily="@font/roboto_black_italic"
            android:text="Cette section pour choisir enytre des Noms ou des Mots que vous choisissez"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toTopOf="@+id/choice_two"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="@+id/choice_two" />

        <ImageView
            android:id="@+id/nextImage2"
            android:layout_width="43dp"
            android:layout_height="36dp"
            android:layout_marginEnd="24dp"
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/choice_two"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/next" />

        <TextView
            android:id="@+id/textDemo3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:fontFamily="@font/roboto_black_italic"
            android:text="Cette section pour choisir enytre des Noms ou des Mots que vous choisissez"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="@+id/choice_two"
            app:layout_constraintTop_toBottomOf="@+id/viewOther" />

        <ImageView
            android:id="@+id/nextImage3"
            android:layout_width="43dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewOther"
            app:srcCompat="@drawable/check" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.12" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.02" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="190dp"
            android:layout_height="198dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/bottom_logo" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
